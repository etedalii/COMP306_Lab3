@model _301104393Lu_Lab3.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Comments";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="far fa-plus-square"></i> Create New</a>
</p>
<div class="row">
    <div class="m-1">
        <form asp-action="Index" asp-controller="Comment" method="post">
            <span>Rating bigger than:</span>
            <input type="number" name="rating" id="rating" max="10" maxlength="2" value="" />

            <span>Movie Name:</span>
            <input type="text" name="movieName" id="movieName" value="" />

            <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Filter</button>
        </form>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment.Statement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment.StatementDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comments)
        {
            Movie movie = Model.Movies.Where(_ => _.MovieId == item.MovieId).FirstOrDefault();
            if (movie == null)
                continue;
            <tr>
                <td>
                    <span>@(movie != null? movie.Title : "")</span>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatementDate)
                </td>
                <td>
                    @if (DateTime.Now.Subtract(Convert.ToDateTime(item.StatementDate)).TotalHours >= 24)
                    {
                        <button asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-primary btn-sm" disabled><i class="fas fa-edit"></i></button>
                        <button asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-danger btn-sm" disabled><i class="fas fa-trash-alt"></i></button>
                    }
                    else
                    {
                        <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    $(document).ready(() => {
        let url = '@Url.Action(action:"FillAutoComplete", controller: "Comment")';
        $.ajax({
            url: url,
            method: 'get',
            dataType: 'json',
            success: (data) => {
                $("#movieName").autocomplete({
                    source: data
                });
            }
        })
    });
    </script>
}